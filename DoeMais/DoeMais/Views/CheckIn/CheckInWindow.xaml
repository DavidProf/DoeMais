<Window
    x:Class="DoeMais.Views.CheckIn.CheckInWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DoeMais.Views.CheckIn"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DoeMais - Check-in"
    Width="600"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="120" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <!--  barra superior  -->
        <Grid
            Grid.ColumnSpan="5"
            VerticalAlignment="Top"
            Background="#4a7dcb">
            <Label Foreground="White">DoeMais - Check-in</Label>
            <StackPanel
                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                WindowChrome.IsHitTestVisibleInChrome="True">
                <Button
                    Name="MinimizeWindow"
                    Width="30"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="-"
                    FontSize="16"
                    Foreground="White"
                    IsTabStop="False"
                    Style="{x:Null}" />
                <Button
                    Name="CloseApp"
                    Width="30"
                    Background="#fa4141"
                    BorderThickness="0"
                    Content="X"
                    Foreground="White"
                    IsTabStop="False"
                    Style="{x:Null}"
                    TabIndex="0" />
            </StackPanel>
        </Grid>
        <!--  GroupBox Buscar Doação  -->
        <GroupBox
            Grid.Row="1"
            Margin="5"
            BorderBrush="#444"
            BorderThickness="2"
            Header="Buscar doação">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="120" />
                </Grid.ColumnDefinitions>
                <!--  groupbox filtros  -->
                <GroupBox
                    BorderBrush="#444"
                    BorderThickness="2"
                    Header="Filtros">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <!--  radiobutton  -->
                        <RadioButton
                            Name="radioButton_nenhum"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="Nenhum" />
                        <RadioButton
                            Name="radioButton_CPF"
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="CPF" />
                        <RadioButton
                            Name="radioButton_CNPJ"
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="CNPJ" />
                        <RadioButton
                            Name="radioButton_nome"
                            Grid.Column="3"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="Nome" />
                        <!--  textbox  -->
                        <TextBox
                            Name="textBox_busca"
                            Grid.Row="1"
                            Grid.Column="1"
                            Grid.ColumnSpan="2" />
                    </Grid>
                </GroupBox>

                <!--  button  -->
                <Button
                    Name="button_buscar"
                    Grid.Column="1"
                    Width="100"
                    Height="30"
                    Content="Buscar" Click="button_buscar_Click" />
            </Grid>
        </GroupBox>
        <!--  listview  -->
        <ListView Grid.Row="2" Margin="5,0,5,0" Name="listView_doacoes" ItemsSource="{Binding ListaDoacoes}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="60" Header="Cód" DisplayMemberBinding="{Binding CodDoacao}"/>
                    <GridViewColumn Width="80" Header="Data" DisplayMemberBinding="{Binding Data}"/>
                    <GridViewColumn Width="160" Header="Nome do doador/Instituição" DisplayMemberBinding="{Binding Nome}"/>
                    <GridViewColumn Width="100" Header="CPF/CNPJ" DisplayMemberBinding="{Binding CpfCnpj}"/>
                    <GridViewColumn Width="150" Header="Retira em domicílio" DisplayMemberBinding="{Binding Domicilio}"/>
                </GridView>
            </ListView.View>

        </ListView>
        <!--  button  -->
        <Button
            Name="button_detalhes"
            Grid.Row="3"
            Width="100"
            Height="30"
            Margin="200,0,0,0"
            Content="Detalhar" Click="button_detalhes_Click" />
        <Button
            Name="button_voltar"
            Grid.Row="3"
            Width="100"
            Height="30"
            Margin="0,10,200,10"
            Content="Voltar" Click="button_voltar_Click" />
    </Grid>
</Window>