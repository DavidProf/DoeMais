<Window
    x:Class="DoeMais.Views.MenuWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DoeMais.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DoeMais - Menu"
    Width="600"
    Height="450"
    Background="#e5f5ff"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="35" />
            <RowDefinition />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="10" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.ColumnSpan="3"
            VerticalAlignment="Top"
            Background="#4a7dcb">
            <Label Foreground="White">DoeMais - Menu</Label>
            <StackPanel
                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                WindowChrome.IsHitTestVisibleInChrome="True">
                <Button
                    Name="MinimizeWindow"
                    Width="30"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="-"
                    FontSize="16"
                    Foreground="White"
                    IsTabStop="False"
                    Style="{x:Null}" />
                <Button
                    Name="CloseApp"
                    Width="30"
                    Background="#fa4141"
                    BorderThickness="0"
                    Content="X"
                    Foreground="White"
                    IsTabStop="False"
                    Style="{x:Null}"
                    TabIndex="0" />
            </StackPanel>
        </Grid>

        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Background="#8fd5ff" />

        <Line
            Grid.Row="2"
            Grid.Column="1"
            Stroke="#002c70"
            StrokeThickness="2"
            X1="5"
            X2="5"
            Y1="0"
            Y2="350" />

        <Line
            Grid.Row="2"
            Grid.Column="1"
            Stroke="#4a7dcb"
            StrokeThickness="5"
            X1="5"
            X2="5"
            Y1="50"
            Y2="175" />

        <Line
            Grid.Row="2"
            Grid.Column="1"
            Stroke="#a2c7ff"
            StrokeThickness="5"
            X1="5"
            X2="5"
            Y1="175"
            Y2="300" />

        <Grid
            Name="grid_instituicao"
            Grid.Row="2"
            Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="10" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition />
                    <RowDefinition Height="30" />
                    <RowDefinition />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="15" />
                </Grid.ColumnDefinitions>

                <Button
                    Name="button_cadastrarFuncionarios"
                    Grid.Row="1"
                    Grid.Column="2"
                    Content="  Cadastrar &#xa;Funcionários"
                    FontSize="16" />
                <Button
                    Name="button_consultarFuncionarios"
                    Grid.Row="3"
                    Grid.Column="1"
                    Content="  Consultar &#xa;Funcionários"
                    FontSize="16" />
            </Grid>

            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition />
                    <RowDefinition Height="35" />
                    <RowDefinition />
                    <RowDefinition Height="35" />
                    <RowDefinition />
                    <RowDefinition Height="35" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>

                <Button
                    Name="button_mensagens"
                    Grid.Row="1"
                    Grid.Column="1"
                    Content="Mensagens"
                    FontSize="16" />
                <Button
                    Name="button_propaganda"
                    Grid.Row="3"
                    Grid.Column="1"
                    Content="Propaganda"
                    FontSize="16" />
                <Button
                    Name="button_perfil"
                    Grid.Row="5"
                    Grid.Column="1"
                    Click="Button_perfil_Click"
                    Content="Perfil&amp;Itens"
                    FontSize="16" />
            </Grid>
        </Grid>

        <Grid
            Name="grid_doacoes"
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="10" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>

                <Button
                    Name="button_registrarDoacao"
                    Grid.Row="1"
                    Grid.Column="1"
                    Content=" Registrar &#xa;  Doação"
                    FontSize="16" />
                <Button
                    Name="button_checarRetiradas"
                    Grid.Row="2"
                    Grid.Column="2"
                    Click="button_checarRetiradas_Click"
                    Content="  Checar &#xa;Retiradas"
                    FontSize="16" />
                <Button
                    Name="button_checkin"
                    Grid.Row="3"
                    Grid.Column="1"
                    Click="button_checkin_Click"
                    Content="Check-in"
                    FontSize="16" />
            </Grid>

            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition />
                    <RowDefinition Height="35" />
                    <RowDefinition />
                    <RowDefinition Height="35" />
                    <RowDefinition />
                    <RowDefinition Height="35" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>

                <Button
                    Name="button_estoque"
                    Grid.Row="1"
                    Grid.Column="1"
                    Content="Estoque"
                    FontSize="16" />
                <Button
                    Name="button_triagem"
                    Grid.Row="3"
                    Grid.Column="1"
                    Content="Triagem"
                    FontSize="16" />
                <Button
                    Name="button_saida"
                    Grid.Row="5"
                    Grid.Column="1"
                    Content="Saída"
                    FontSize="16" />
            </Grid>
        </Grid>

        <StackPanel
            Grid.Row="3"
            Grid.ColumnSpan="3"
            Background="#8fd5ff">
            <Grid Height="35" ShowGridLines="false">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="260" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="button_instituicao"
                    Click="Button_instituicao_Click"
                    Content="INSTITUIÇÃO"
                    Style="{StaticResource button_gradient}" />
                <StackPanel Grid.Column="1" Background="#b6e4ff" />
                <Button
                    Name="button_doacoes"
                    Grid.Column="2"
                    Click="Button_doacoes_Click"
                    Content="DOAÇÕES"
                    Style="{StaticResource button_transparent}" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
